<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.esteban.aplicacion_final">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aplicacion_final"
        tools:targetApi="31">

        <!-- Actividad de Pantalla de Carga -->
        <activity
            android:name=".pantalla_carga"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity">

        </activity>

        <!-- Actividad de Registro de Almacén -->
        <activity
            android:name=".RegistroActivity" >
        </activity>

        <!-- Actividad de Inicio de Sesión (Almacen) -->
        <activity
            android:name=".LoginAlmacenActivity">
        </activity>

        <!-- Actividad de Registro de Almacén -->
        <activity
            android:name=".RegistroAlmacenActivity">
        </activity>

        <!-- Actividad Principal -->
        <activity
            android:name=".MainActivity">
        </activity>

    </application>

</manifest>
